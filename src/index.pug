- sections = []
- sections.push({ id: 'landing',        name: 'Accueil'               })
- sections.push({ id: 'faq',            name: 'Questions fréquentes'  })
- sections.push({ id: 'pricing',        name: 'Tarifs'                })
- sections.push({ id: 'cta',            name: 'Se lancer'             })
- sections.push({ id: 'testimonials',   name: 'Témoignages'           })
- sections.push({ id: 'open_sourced',   name: 'Open source'           })
- sections.push({ id: 'for_developers', name: 'Pour les développeurs' })
- sections.push({ id: 'about',          name: 'À propos'              })
- sections.push({ id: 'features',       name: 'Fonctionnalités'       })
- sections.push({ id: 'merch',          name: 'Produits dérivés'      })

- description = "Gérez vos notes, prises de cours, devoirs et autres en un seul endroit. Une application web faite par un étudiant, pour les étudiants."
- title = "schoolsyst: une nouvelle façon d'étudier"

head
  // Mandatory
  meta(charset="UTF-8")
  meta(name="viewport", content="width=device-width, initial-scale=1.0")
  meta(http-equiv="X-UA-Compatible", content="ie=edge")
  // Basic
  title=title
  meta(name='title', content=title)
  meta(name='description', content=description)
  // Imports
  link(rel="stylesheet", href="/dist/styles.css")
  link(rel="stylesheet", href="/assets/font-import-now.css")
  // Favicons
  link(rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png')
  link(rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png')
  link(rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png')
  link(rel='manifest' href='/site.webmanifest')
  link(rel='mask-icon' href='/safari-pinned-tab.svg' color='#1389fd')
  meta(name='msapplication-TileColor' content='#2d89ef')
  meta(name='theme-color' content='#ffffff')
  // Open Graph / Facebook
  meta(property='og:type', content='website')
  meta(property='og:url', content='https://www.schoolsyst.com/')
  meta(property='og:title', content=title)
  meta(property='og:description', content=description)
  meta(property='og:image', content='/assets/schoolsyst-social-preview-card.png')
  // Twitter
  meta(property='twitter:card', content='summary_large_image')
  meta(property='twitter:url', content='https://www.schoolsyst.com/')
  meta(property='twitter:title', content=title)
  meta(property='twitter:description', content=description)
  meta(property='twitter:image', content='/assets/schoolsyst-social-preview-card.png')

- navLinks = sections.filter(l => ['features', 'about', 'testimonials', 'open_sourced', 'faq'].includes(l.id))
body
  nav
    ul
      //TODO: animate logo
      li.logo: a(href="javascript:smoothScroll(0)").logo: img(src="/assets/logotype-horizontal.png") 
      for link in navLinks
        li: a(href=`#${link.id}`) #{link.name}

  .section-wrapper.landing
    include sections/landing
  .section-wrapper.accent
    include sections/features
  .section-wrapper
    include sections/features/grades
  .section-wrapper
    include sections/features/learn
  .section-wrapper
    include sections/features/notes
  .section-wrapper
    include sections/features/homework
  .section-wrapper
    include sections/features/wake_up
  .section-wrapper
    include sections/features/schedule
  .section-wrapper
    include sections/pricing
  .section-wrapper
    include sections/cta
  .section-wrapper
    include sections/testimonials
  .section-wrapper
    include sections/open_sourced
  .section-wrapper
    include sections/for_developers
  .section-wrapper
    include sections/about

  script(src="/dist/main.js")
